<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="196dp"
        android:width="10000px"
        android:background="#FA036897"
        android:text="About Us"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        app:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="207dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:src="@drawable/ceos" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="268dp"
                android:layout_height="30dp"
                android:text="Karan Bedi - CEO"

                android:textColor="#03A9F4"
                android:textSize="70px">

            </TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginLeft="90px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Chief Executive Officer Mx Player; Co-Founder and Chief Executive Officer"
        android:textSize="50px">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="265dp"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="345dp"
        android:padding="10dp"
        app:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="207dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:src="@drawable/manegers" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="268dp"
                android:layout_height="30dp"
                android:text="Abhishek Joshi -SVOD"

                android:textColor="#03A9F4"
                android:textSize="70px">

            </TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90px"
        android:layout_marginTop="550dp"
        android:text="Abhishek Joshi has been appointed as the business head -SVOD, MX Player. In this role he will be responsibile for building the subscription business"
        android:textSize="50px">

    </TextView>

</RelativeLayout>